{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",  // Include debugging symbols
                "${workspaceFolder}/*.cpp",  // Compile all .cpp files in the workspace
                "-o",
                "${workspaceFolder}/a.exe"  // Output executable named 'a.exe'
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for compiling C++ files."
        }
    ]
}
